<Window x:Class="WpfApplication.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="580.263" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="311*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="employeeGrid" HorizontalAlignment="Left" Height="471" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Employee" Header="Employee" Width="*" Binding="{Binding FullName}"></DataGridTextColumn>
                <DataGridTextColumn x:Name="Department" Header="Department" Width="*"  Binding="{Binding Department}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="Logoff_Button" Content="Logoff" Grid.Column="1" HorizontalAlignment="Left" Margin="168,501,0,0" VerticalAlignment="Top" Width="75" Click="Logoff_Button_Click"/>
    </Grid>
</Window>
